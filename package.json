{
  "name": "marmwork",
  "version": "1.0.0",
  "description": "front end framework",
  "author": "Dimitri NICOLAS",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "babel-core": "^6.7.6",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "glob": "^7.0.3",
    "parallelshell": "^1.0.0",
    "postcss": "^5.0.19",
    "postcss-assets": "^4.0.1",
    "postcss-calc": "^5.2.1",
    "postcss-cli": "^2.5.1",
    "postcss-color-function": "^2.0.1",
    "postcss-image-set": "^1.0.0",
    "postcss-import": "^8.1.0",
    "postcss-merge-rules": "^2.0.6",
    "postcss-nested": "^1.0.0",
    "postcss-position": "^0.4.0",
    "postcss-pxtorem": "^3.3.1",
    "postcss-simple-vars": "^1.2.0",
    "postcss-size": "^1.0.0",
    "webpack": "^1.12.15"
  },
  "watch": {
    "build:scripts": {
      "patterns": [ "source" ],
      "extensions": "js"
    },
    "minify:scripts": {
      "patterns": [ "assets/bin" ],
      "extensions": "js",
      "ignore": "assets/bin/script.min.js"
    },
    "build:style": {
      "patterns": [ "source" ],
      "extensions": "css"
    },
    "minify:style": {
      "patterns": [ "assets/bin" ],
      "extensions": "css",
      "ignore": "assets/bin/style.min.css"
    }
  },
  "scripts": {
    "build:scripts": "webpack source/main.js assets/bin/script.js --config build/webpack.js",
    "build:style": "postcss -i source/main.css -o assets/bin/style.css --config ./build/postcss.json",
    "minify:scripts": "uglifyjs assets/bin/script.js -o assets/bin/script.min.js -m",
    "minify:style": "cleancss assets/bin/style.css -o assets/bin/style.min.css",
    "watch": "npm-watch",
    "browser-sync": "browser-sync start --config build/bs-config.js",
    "dev": "parallelshell \"npm run watch\" \"npm run browser-sync -s\""
  }
}
