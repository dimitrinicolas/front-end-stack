{
  "name": "front-end-stack",
  "description": "Personnal front-end stack",
  "author": "Dimitri NICOLAS",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^8.4.1",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.7.0",
    "browser-sync": "^2.24.4",
    "clean-css-cli": "^4.1.11",
    "css-mqpacker": "^6.0.2",
    "glob": "^7.0.5",
    "overflow-color": "^2.1.3",
    "parallelshell": "^3.0.2",
    "postcss": "^6.0.22",
    "postcss-axis": "^0.1.2",
    "postcss-calc": "^6.0.0",
    "postcss-cli": "^5.0.0",
    "postcss-color-function": "^4.0.1",
    "postcss-import": "^11.1.0",
    "postcss-inline-media": "^1.0.1",
    "postcss-nested": "^3.0.0",
    "postcss-position": "^1.0.0",
    "postcss-pxtorem": "^4.0.0",
    "postcss-simple-vars": "^4.1.0",
    "postcss-size": "^2.0.0",
    "uglify-js": "^3.3.24",
    "watch": "^1.0.2",
    "webpack": "^4.8.1",
    "webpack-cli": "^2.1.3"
  },
  "scripts": {
    "build:style": "postcss --config ./build/postcss.config.js -o assets/dist/style.css source/main.css && npm run minify:style",
    "minify:style": "cleancss assets/dist/style.css -o assets/dist/style.min.css -d -O1 all:on -O2 all:on",
    "build:script": "webpack source/main.js  --output-path='./assets/dist/' --output-filename='script.js' --config build/webpack.config.js && npm run minify:script",
    "minify:script": "uglifyjs assets/dist/script.js -o assets/dist/script.min.js -m",
    "watch-css": "watch \"npm run build:style\" source --filter=build/watch-css-filter.js -d -u --interval=.1",
    "watch-js": "watch \"npm run build:script\" source --filter=build/watch-js-filter.js -d - --interval=.3",
    "watch": "parallelshell \"npm run watch-css\" \"npm run watch-js\"",
    "browser-sync": "browser-sync start --config build/bs.config.js",
    "browser-sync-silent": "browser-sync start --config build/bs.config.js --no-open",
    "dev": "parallelshell \"npm run watch\" \"npm run browser-sync -s\"",
    "build": "parallelshell \"npm run watch\" \"npm run browser-sync-silent -s\"",
    "start": "npm run dev"
  }
}
