{
  "name": "marmwork",
  "description": "front end framework",
  "author": "Dimitri NICOLAS",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^6.7.2",
    "babel-core": "^6.18.2",
    "babel-loader": "^6.2.8",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.11.1",
    "browser-sync": "^2.18.7",
    "clean-css-cli": "^4.0.5",
    "glob": "^7.0.5",
    "npm-watch": "^0.1.8",
    "parallelshell": "^2.0.0",
    "postcss": "^5.2.12",
    "postcss-assets": "^4.1.0",
    "postcss-calc": "^5.3.1",
    "postcss-cli": "^2.6.0",
    "postcss-color-function": "^3.0.0",
    "postcss-flexibility": "^1.1.0",
    "postcss-import": "^9.1.0",
    "postcss-inline-media": "0.0.1",
    "postcss-nested": "^1.0.0",
    "postcss-position": "^0.5.0",
    "postcss-pxtorem": "^4.0.0",
    "postcss-simple-vars": "^3.0.0",
    "postcss-size": "^1.0.0",
    "postcss-value-parser": "^3.3.0",
    "uglify-js": "^2.7.4",
    "webpack": "^2.2.1"
  },
  "watch": {
    "build:scripts": {
      "patterns": [
        "source"
      ],
      "extensions": "js"
    },
    "minify:scripts": {
      "patterns": [
        "assets/dist"
      ],
      "extensions": "js",
      "ignore": "assets/dist/script.min.js"
    },
    "build:style": {
      "patterns": [
        "source"
      ],
      "extensions": "css"
    },
    "minify:style": {
      "patterns": [
        "assets/dist"
      ],
      "extensions": "css",
      "ignore": "assets/dist/style.min.css"
    }
  },
  "scripts": {
    "build:scripts": "webpack source/main.js assets/dist/script.js --config build/webpack.js",
    "build:style": "postcss -i source/main.css -o assets/dist/style.css --config ./build/postcss.json",
    "minify:scripts": "uglifyjs assets/dist/script.js -o assets/dist/script.min.js -m",
    "minify:style": "cleancss assets/dist/style.css -o assets/dist/style.min.css -d -O1 all:on -O2 all:on",
    "watch": "npm-watch",
    "browser-sync": "browser-sync start --config build/bs-config.js",
    "dev": "parallelshell \"npm run watch\" \"npm run browser-sync -s\""
  }
}
