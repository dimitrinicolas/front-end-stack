{
  "name": "marmwork",
  "description": "front end framework",
  "author": "Dimitri NICOLAS",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^7.1.6",
    "babel-core": "^6.18.2",
    "babel-loader": "^7.1.2",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.11.1",
    "browser-sync": "^2.18.7",
    "clean-css-cli": "^4.0.5",
    "glob": "^7.0.5",
    "npm-watch": "^0.3.0",
    "parallelshell": "^3.0.2",
    "postcss": "^6.0.14",
    "postcss-calc": "^6.0.0",
    "postcss-cli": "^4.1.1",
    "postcss-color-function": "^4.0.1",
    "postcss-import": "^11.0.0",
    "postcss-inline-media": "0.0.2",
    "postcss-nested": "^2.1.2",
    "postcss-position": "^1.0.0",
    "postcss-pxtorem": "^4.0.0",
    "postcss-simple-vars": "^4.1.0",
    "postcss-size": "^2.0.0",
    "uglify-js": "^3.1.8",
    "webpack": "^3.6.0"
  },
  "watch": {
    "build:style": {
      "patterns": [
        "source"
      ],
      "extensions": "css"
    },
    "build:scripts": {
      "patterns": [
        "source"
      ],
      "extensions": "js"
    }
  },
  "scripts": {
    "build:style": "postcss -c ./build/postcss.config.js -o assets/dist/style.css source/main.css && npm run minify:style",
    "minify:style": "cleancss assets/dist/style.css -o assets/dist/style.min.css -d -O1 all:on -O2 all:on",
    "build:scripts": "webpack source/main.js assets/dist/script.js --config build/webpack.config.js && npm run minify:scripts",
    "minify:scripts": "uglifyjs assets/dist/script.js -o assets/dist/script.min.js -m",
    "watch": "npm-watch",
    "browser-sync": "browser-sync start --config build/bs.config.js",
    "dev": "parallelshell \"npm run watch\" \"npm run browser-sync -s\""
  }
}
