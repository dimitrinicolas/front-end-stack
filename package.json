{
  "name": "front-end-stack",
  "description": "Personnal front-end stack",
  "author": "Dimitri NICOLAS",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^8.2.0",
    "babel-core": "^6.18.2",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.6.1",
    "bean": "^1.0.15",
    "browser-sync": "^2.23.6",
    "clean-css-cli": "^4.1.11",
    "glob": "^7.0.5",
    "marmottajax": "^3.0.6",
    "npm-watch": "^0.3.0",
    "parallelshell": "^3.0.2",
    "postcss": "^6.0.21",
    "postcss-axis": "^0.1.2",
    "postcss-calc": "^6.0.0",
    "postcss-cli": "^5.0.0",
    "postcss-color-function": "^4.0.1",
    "postcss-import": "^11.1.0",
    "postcss-inline-media": "^1.0.1",
    "postcss-nested": "^3.0.0",
    "postcss-position": "^1.0.0",
    "postcss-pxtorem": "^4.0.0",
    "postcss-simple-vars": "^4.1.0",
    "postcss-size": "^2.0.0",
    "uglify-js": "^3.3.16",
    "webpack": "^4.2.0",
    "webpack-cli": "^2.0.13"
  },
  "watch": {
    "build:style": {
      "patterns": [
        "source"
      ],
      "extensions": "css"
    },
    "build:scripts": {
      "patterns": [
        "source"
      ],
      "extensions": "js"
    }
  },
  "scripts": {
    "build:style": "postcss --config ./build/postcss.config.js -o assets/dist/style.css source/main.css && npm run minify:style",
    "minify:style": "cleancss assets/dist/style.css -o assets/dist/style.min.css -d -O1 all:on -O2 all:on",
    "build:scripts": "webpack source/main.js  --output-path='./assets/dist/' --output-filename='script.js' --config build/webpack.config.js && npm run minify:scripts",
    "minify:scripts": "uglifyjs assets/dist/script.js -o assets/dist/script.min.js -m",
    "watch": "npm-watch",
    "browser-sync": "browser-sync start --config build/bs.config.js",
    "dev": "parallelshell \"npm run watch\" \"npm run browser-sync -s\""
  }
}
