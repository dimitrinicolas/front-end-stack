{
  "name": "front-end-stack",
  "description": "Personnal front-end stack",
  "author": "Dimitri NICOLAS",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^8.4.1",
    "babel-core": "^6.26.3",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-env": "^1.7.0",
    "bean": "^1.0.15",
    "browser-sync": "^2.24.4",
    "clean-css-cli": "^4.1.11",
    "glob": "^7.0.5",
    "marmottajax": "^3.0.6",
    "npm-watch": "^0.3.0",
    "overflow-color": "^2.1.2",
    "parallelshell": "^3.0.2",
    "postcss": "^6.0.22",
    "postcss-axis": "^0.1.2",
    "postcss-calc": "^6.0.0",
    "postcss-cli": "^5.0.0",
    "postcss-color-function": "^4.0.1",
    "postcss-import": "^11.1.0",
    "postcss-inline-media": "^1.0.1",
    "postcss-nested": "^3.0.0",
    "postcss-position": "^1.0.0",
    "postcss-pxtorem": "^4.0.0",
    "postcss-simple-vars": "^4.1.0",
    "postcss-size": "^2.0.0",
    "rollup": "^0.58.2",
    "rollup-plugin-babel": "^3.0.4",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.2.1",
    "rollup-plugin-node-resolve": "^3.3.0",
    "uglify-js": "^3.3.24"
  },
  "watch": {
    "build:style": {
      "patterns": [
        "source"
      ],
      "extensions": "css"
    },
    "build:script": {
      "patterns": [
        "source"
      ],
      "extensions": "js"
    }
  },
  "scripts": {
    "build:style": "postcss --config ./build/postcss.config.js -o assets/dist/style.css source/main.css && npm run minify:style",
    "minify:style": "cleancss assets/dist/style.css -o assets/dist/style.min.css -d -O1 all:on -O2 all:on",
    "build:script": "rollup --config build/rollup.config.js && npm run minify:script",
    "minify:script": "uglifyjs assets/dist/script.js -o assets/dist/script.min.js -m",
    "watch": "npm-watch",
    "browser-sync": "browser-sync start --config build/bs.config.js",
    "dev": "parallelshell \"npm run watch\" \"npm run browser-sync -s\""
  },
  "dependencies": {
    "react": "^16.3.2"
  }
}
